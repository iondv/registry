<% layout('../imodal/content') %>

<% stylesheet(module + '/vendor/bootstrap3-wysihtml5-bower/dist/bootstrap3-wysihtml5.min.css') -%>
<% stylesheet(module + '/vendor/jquery-ui/themes/base/tabs.css') -%>

<% script(module + '/js/ajax-uploader-new.js') -%>
<% script(module + '/vendor/bootstrap3-wysihtml5-bower/dist/bootstrap3-wysihtml5.all.min.js') -%>
<% script(module + '/vendor/bootstrap3-wysihtml5-bower/dist/locales/bootstrap-wysihtml5.ru-RU.js') -%>

<div class="panel panel-default">
  <form class="object-manager form form-horizontal" method="post" autocomplete="off"
        enctype="application/x-www-form-urlencoded">
    <div class="panel-body">
      <div class="form-group">
        <div class="col-sm-offset-2 col-md-10 col-sm-9">
          <h4><%=__('templates.default.view.selectClass.title')%></h4>
        </div>
        <% subclasses.forEach(function (c) {
        %>
        <div class="col-sm-offset-2 col-md-10 col-sm-9">
          <input name="choice" id="<%=c.name%>" type="radio" value="<%=c.name%>"/>
          <label for="<%=c.name%>"><%=c.caption%></label>
        </div>
        <%
        }); %>
      </div>
      <footer>
        <button id="submit" type="button" class="btn btn-primary pull-right">
          <%=__('templates.default.view.selectClass.submit')%>
        </button>
      </footer>
    </div>
  </form>
</div>

<script>
  $('#submit').click(function () {
    let value = $('[name="choice"]:checked').val();
    if (value) {
      parent.imodal.reload(location.href + '&choice=' + value);
    }
  });
</script>