{
  "parametrised": true,
  "sysTitle": "ION registry module",
  "yandexGeoApiKey": "[[registry.yandexGeoApiKey]]",
  "di" : {
    "changelogFactory": {
      "module": "@iondv/commons/lib/changelogger/DsChangelogFactory",
      "options": {
        "dataSource": "ion://Db"
      }
    },
    "signManager": {
      "module": "@iondv/commons/lib/DigitalSignManager",
      "options": {
        "dataSource": "ion://Db",
        "defaultResult": "[[sign.defaultResult]]"
      }
    },
    "saveActionHandler": {
      "module": "./actions/SaveHandler"
    },
    "actions": {
      "module": "@iondv/registry/backend/ActionProvider",
      "options": {
        "actions": [
          {
            "code": "CREATE",
            "handler": {
              "name": "createActionHandler",
              "module": "./actions/CreateHandler"
            }
          },
          {
            "code": "SAVE",
            "handler": "ion://saveActionHandler"
          },
          {
            "code": "UPDATE",
            "handler": "ion://saveActionHandler"
          },
          {
            "code": "DELETE",
            "handler": {
              "name": "deleteActionHandler",
              "module": "./actions/DeleteHandler"
            }
          }
        ]
      }
    },
    "userFilters": {
      "module": "@iondv/registry/backend/UserFilters",
      "initMethod": "init",
      "options": {
        "ds":"ion://Db"
      }
    },
    "concurencyChecker": {
      "module": "@iondv/registry/backend/ConcurencyChecker",
      "options": {
        "ds":"ion://Db"
      }
    },
    "logRecorder": {
      "module": "@iondv/commons/lib/log/LogRecorder",
      "options": {
        "target": "ion://sysLog",
        "messageTypes": ["info", "warn"]
      }
    },
    "export": {
      "module": "@iondv/registry/backend/ExportManager",
      "initMethod": "init",
      "initLevel": 2,
      "options": {
        "auth": "ion://auth",
        "dataRepo": "ion://securedDataRepo",
        "metaRepo": "ion://metaRepo",
        "bg": "ion://background",
        "configName": "export",
        "exportPath": "[[registry.exportPath]]"
      }
    }
  }
}
